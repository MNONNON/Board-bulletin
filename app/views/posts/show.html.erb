<div class="container">
    <h2><%= @post.title %></h2>
    <p>Posted by <%= @post.user.email %> <%= time_ago_in_words(@post.created_at) %> ago </p>
    <p><%= @post.description %></p>
    
    <h3>Comments:</h3>
    <%= render @post.comments %>
    
    <h3>Reply to Message:</h3>
    <%= render 'comments/form' %>
    
    <%= link_to "back", posts_path ,class:"btn btn-default" %>
    <% if user_signed_in? %>
        <% if @post.user_id == current_user.id %>
            <%= link_to "edit", edit_post_path,class:"btn btn-default" %>
            <%= link_to "delete", post_path, class:"btn btn-default", method: :delete, data:  {confirm: "Are you sure?"} %>
        <% end %>
    <% end %>
</div>